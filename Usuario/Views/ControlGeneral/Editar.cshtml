@model WebParqueoUsuario.Models.ControlGeneral
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Editar Ingreso</h4>

            </div>
            <div class="panel-body">
                <form action="@Url.Action("Editar","ControlGeneral")" method="post">
                    <input type="hidden" class="form-control" name="ID_Control" value="@Html.DisplayTextFor(m => m.ID_Control)" />

                    <div class="form-group">
                        <label>Número de Placa</label>
                        <input type="text" class="form-control" name="Placa" value="@Html.DisplayTextFor(m => m.Placa)" />
                    </div>

                    <div class="form-group">
                        <label>Tipo de usuario</label>
                        <input type="text" class="form-control" name="Tipo" value="@Html.DisplayTextFor(m => m.Tipo)" />
                    </div>

                    <div class="form-group">
                        <label>Nombre de usuario</label>
                        <input type="text" class="form-control" name="Usuario" value="@Html.DisplayTextFor(m => m.Usuario)" />
                    </div>

                    <div class="form-group">
                        <label>Estado</label>
                        <input type="text" class="form-control" name="Estado" value="@Html.DisplayTextFor(m => m.Estado)" />
                    </div>

                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","ControlGeneral")">Volver</a>

                </form>


            </div>
        </div>


    </div>
</div>