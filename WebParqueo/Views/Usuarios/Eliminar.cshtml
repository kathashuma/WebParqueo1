@model WebParqueo.Models.Usuarios

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar Registro</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar el Registro:
                    @Html.DisplayTextFor(m => m.ID_Usuario) "-----"
                    Nombre de Usuario:
                    @Html.DisplayTextFor(m => m.Usuario)"-----"
                    Clave:
                    @Html.DisplayTextFor(m => m.Clave)"-----"
                    Nivel de Usuario:
                    @Html.DisplayTextFor(m => m.NivelUsuario)"-----"

                    ?
                </div>
                <form action="@Url.Action("Eliminar","Usuarios")" method="post">
                    <input type="hidden" class="form-control" name="ID_Usuario" value="@Html.DisplayTextFor(m => m.ID_Usuario)" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Usuarios")">Volver</a>
                </form>

            </div>
        </div>


    </div>
</div>