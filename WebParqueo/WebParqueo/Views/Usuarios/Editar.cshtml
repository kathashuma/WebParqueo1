@model List<WebParqueo.Models.Usuarios>


@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Editar Usuario</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Editar","Usuarios")" method="post">
                    <input type="hidden" class="form-control" name="ID_Usuario" value="@Html.DisplayTextFor(m => m.ID_Usuario)" />
                    <div class="form-group">
                        <label>Nombre del Usuario</label>
                        <input type="text" class="form-control" name="Usuario" value="@Html.DisplayTextFor(m => m.Usuario)" />
                    </div>
                    <div class="form-group">
                        <label>Clave</label>
                        <input type="text" class="form-control" name="Clave" value="@Html.DisplayTextFor(m => m.Clave)" />
                    </div>
                    <div class="form-group">
                        <label>Nivel de usuario</label>
                        <input type="text" class="form-control" name="Nivel del Usuario" value="@Html.DisplayTextFor(m => m.NivelUsuario)" />
                    </div>

                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Usuarios")">Volver</a>

                </form>


            </div>
        </div>


    </div>
