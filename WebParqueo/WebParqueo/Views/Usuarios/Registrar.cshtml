@model List<WebParqueo.Models.Usuarios>

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Nuevo Registro</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Registrar","Usuarios")" method="post">
                    <div class="form-group">
                        <label>Usuario</label>
                        <input type="text" class="form-control" name="Usuario" />
                    </div>
                    <div class="form-group">
                        <label>Clave</label>
                        <input type="text" class="form-control" name="Clave" />
                    </div>
                    <div class="form-group">
                        <label>Nivel del Usuario</label>
                        <input type="text" class="form-control" name="NivelUsuario" />
                    </div>

                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Usuarios")">Volver</a>

                </form>
            </div>
        </div>
    </div>
</div>
