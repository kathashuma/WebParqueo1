@model WebParqueo.Models.Cliente

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar Registro</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar el Registro:
                    @Html.DisplayTextFor(m => m.ID_Cliente) "-----"
                    Nombre.:
                    @Html.DisplayTextFor(m => m.Apellidos)"-----"
                    Apellidos.:
                    @Html.DisplayTextFor(m => m.Apellidos)"-----"
                    Teléfono.:
                    @Html.DisplayTextFor(m => m.Telefono)"-----"
                    Correo.:
                    @Html.DisplayTextFor(m => m.Correo)"-----"
                    ?
                </div>
                <form action="@Url.Action("Eliminar","Cliente")" method="post">
                    <input type="hidden" class="form-control" name="ID_Cliente" value="@Html.DisplayTextFor(m => m.ID_Cliente)" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Cliente")">Volver</a>
                </form>

            </div>
        </div>


    </div>
</div>