@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar Registro</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar el Registro:
                    @Html.DisplayTextFor(m => m.ID_Control) "-----"
                    Numero de placa:
                    @Html.DisplayTextFor(m => m.Placa)"-----"
                    Estado:
                    @Html.DisplayTextFor(m => m.Estado)"-----"

                    ?
                </div>
                <form action="@Url.Action("Eliminar","ControlGeneral")" method="post">
                    <input type="hidden" class="form-control" name="ID_Control" value="@Html.DisplayTextFor(m => m.ID_Control)" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","ControlGeneral")">Volver</a>
                </form>

            </div>
        </div>


    </div>
</div>